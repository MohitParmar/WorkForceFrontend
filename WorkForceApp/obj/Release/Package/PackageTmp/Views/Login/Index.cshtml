@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Work Force Portal - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/pages/signin.css" rel="stylesheet" type="text/css">
    <script src="~/Content/bootstrap-3.3.7-dist/js/bootstrap.js"></script>
    <script src="~/Scripts/Angular/AngularJSv1.2.0-rc.3.min.js"></script>
    <script src="~/Scripts/Angular/angular-resource.js"></script>
    <script src="~/Scripts/Angular/angular.min.js"></script>
    <script src="~/Scripts/Module/ng-table.src.js"></script>
    <script src="~/Scripts/Module/app.js"></script>
    <script src="~/Scripts/Jquery/jquery-1.9.1.js"></script>
    <script src="~/Scripts/Jquery/jquery-ui.min.js"></script>
    <script>var _ConPath = '@System.Web.Configuration.WebConfigurationManager.AppSettings["ConPath"]';</script>
    <script>var _URLHostName = '@System.Web.Configuration.WebConfigurationManager.AppSettings["URLHostName"]';</script>
    <script src="~/Scripts/JSController/LoginCntrl.js"></script>
    <style>
        .imgs {
            display: inline-block;
            max-width: 100%;
            height: auto;
            padding: 4px;
            line-height: 1.42857143;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: all .2s ease-in-out;
        }

        .w3-display-topright {
            position: absolute;
            right: 0;
            top: 0;
        }
    </style>
    <script>
        $(function () { $('input').keydown(function (e) { if (e.keyCode == 13) { $("#btnOK").focus().click(); return false; } }); });
    </script>
</head>
<body>
    <div data-ng-app="myApp" data-ng-controller="LoginController">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <img src="~/Images/JINDALLOGO.jpg" class="imgs" style="float:right;height:56px;width:56px;" />
                    <a class="brand" href="#">Work Force Application - Jindal SAW Ltd.</a>
                </div>
            </div>
        </div>
        <div class="account-container">
            <div class="content clearfix">
                <div id="MessageBox"></div>
                <fieldset>
                    <h1>Member Login</h1>
                    <div class="login-fields">
                        <p>Please Provide Your Details</p>
                        <div class="field">
                            <label for="username">Username</label>
                            <input type="text" id="EmpUnqId" name="EmpUnqId" value="" placeholder="Username" class="login username-field" ng-model="usr.EmpUnqId" autofocus />
                        </div>
                        <div class="field">
                            <label for="password">Password:</label>
                            <input type="password" id="Pass" name="Pass" value="" placeholder="Password" class="login password-field" ng-model="usr.Pass" />
                        </div>
                    </div>
                    <div class="login-actions">
                        <input type="submit" id="btnOK" class="button btn btn-primary btn-large" style="margin-top:0;" value="Login" ng-click="UserLogin(usr)" />
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery-1.7.2.min.js"></script>
    <script src="~/Content/js/signin.js"></script>
</body>
</html>